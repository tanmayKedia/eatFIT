<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/text_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
    <TextView
        android:id="@+id/product_info_product_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yogurt"
        android:layout_marginTop="16dp"
        android:textColor="@color/contrast_pink"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/product_info_company_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nestle"
        android:textSize="16sp"
        android:layout_marginTop="-4dp"
        android:layout_below="@id/product_info_product_name_text_view"
        />
        <TextView
            android:id="@+id/product_info_danger_level_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safe"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_below="@id/product_info_company_name_text_view"
            />
        </RelativeLayout>

        <ImageView
            android:id="@+id/product_info_item_image_view"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_placeholder"
            android:layout_gravity="center"
            android:layout_weight="0"
             />
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contrast_pink"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:translationZ="4dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredients_recycler_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/light_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />
</LinearLayout>